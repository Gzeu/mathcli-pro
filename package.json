{
  "name": "mathcli-pro",
  "version": "4.1.9",
  "description": "Modern CLI calculator for developers, engineers, and power users. Features advanced math expressions, unit conversions, currency rates, batch calculations, ASCII charts, and persistent history.",
  "main": "index.js",
  "bin": {
    "mathcli-pro": "bin/mathcli-pro"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --passWithNoTests",
    "test:coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage --passWithNoTests",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "lint": "echo \"Linting not configured yet\"",
    "clean": "rm -rf node_modules package-lock.json",
    "reinstall": "npm run clean && npm install",
    "prepare": "node -e \"import { mkdir } from 'fs/promises'; import { existsSync } from 'fs'; if (!existsSync('data')) await mkdir('data', { recursive: true });\""
  },
  "jest": {
    "preset": null,
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".mjs"],
    "transform": {},
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testTimeout": 10000
  },
  "keywords": [
    "cli",
    "calculator",
    "math",
    "mathematics",
    "terminal",
    "command-line",
    "conversion",
    "unit-conversion",
    "currency",
    "cryptocurrency",
    "chart",
    "visualization",
    "ascii-chart",
    "optimization",
    "batch-processing",
    "csv",
    "json",
    "nodejs",
    "developer-tools",
    "engineering",
    "scientific-calculator"
  ],
  "author": {
    "name": "George Pricop",
    "email": "pricopgeorge@gmail.com",
    "url": "https://github.com/Gzeu"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gzeu/mathcli-pro.git"
  },
  "bugs": {
    "url": "https://github.com/Gzeu/mathcli-pro/issues"
  },
  "homepage": "https://github.com/Gzeu/mathcli-pro#readme",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.2",
    "cli-chart": "^0.3.1",
    "convert-units": "^2.3.4",
    "csv-parse": "^6.1.0",
    "figlet": "^1.9.3",
    "inquirer": "^12.9.6",
    "mathjs": "^14.8.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "jest": "^30.2.0"
  },
  "files": [
    "bin/",
    "commands/",
    "config/",
    "data/.gitkeep",
    "index.js",
    "catalog.js",
    "README.md",
    "LICENSE"
  ],
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/Gzeu"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ]
}